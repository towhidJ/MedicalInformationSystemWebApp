@model IEnumerable<MedicalInformationSystemWebApp.Models.CodeFirstModel.TestRepaortTB>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.TestTB.Id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Report)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.TestTB.Id)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ReportED)
        </td>
        <td style="width: 100px">
            <div class="btn-group">
                <a class="btn btn-primary" href="@Url.Action("Edit", "TestRepaort", new {id = item.Id})"><i class="far fa-edit"></i></a>
                <a class="btn btn-success" href="@Url.Action("Details", "TestRepaort", new {id = item.Id})"><i class="fas fa-list-ul"></i></a>
                <a class="btn btn-danger" href="@Url.Action("Delete", "TestRepaort", new {id = item.Id})"><i class="fas fa-trash-alt"></i></a>
                <a class="btn btn-dark" href="@Url.Action("Print", "TestRepaort", new {id = item.Id})"><i class="fas fa-print">Print</i></a>
            </div>
        </td>
    </tr>
}

</table>
