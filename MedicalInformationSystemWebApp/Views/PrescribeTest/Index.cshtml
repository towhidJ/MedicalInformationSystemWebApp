@model IEnumerable<MedicalInformationSystemWebApp.Models.CodeFirstModel.PrescribeTestTB>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.DoctorTB.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PatientTB.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TestName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Midkit)
        </th>
        <th>Action</th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.DoctorTB.NameED)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.PatientTB.Name)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.TestName)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Midkit)
    </td>
    <td>
        @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
        @Html.ActionLink("Details", "Details", new { id = item.Id }) |
        @Html.ActionLink("Delete", "Delete", new { id = item.Id })
        <a class="btn btn-dark" href="@Url.Action("Print", "PrescribeTest", new {id = item.Id})"><i class="fas fa-print"></i></a>
    </td>
</tr>
}

</table>
