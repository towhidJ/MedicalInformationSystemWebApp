
@{
    ViewBag.Title = "Chart";
}
@section Style
{
    <link href="~/Content/Chart.min.css" rel="stylesheet" />

    <script src="~/Scripts/Chart.min.js"></script>
    <style>
        body {
            background: white;
        }
    </style>
}
<h2 class="text-center text-info">Patient Admit & Apointment Histroy</h2>


<div class="center">


    <div id="haa">



        <canvas class="text-center bg-light" id="myChart" width="150" height="60"></canvas>
        <script>
            var rep = @Html.Raw(Json.Encode(ViewBag.Rep));
            var appch = @Html.Raw(Json.Encode(ViewBag.AppCh));
            var months = @Html.Raw(Json.Encode(ViewBag.Month));
        var ctx = document.getElementById('myChart').getContext('2d');
        var myChart = new Chart(ctx, {
            type: 'bar',
            data: {
                labels: months,
                datasets: [{
                    label: 'Patient',
                    data: rep,
                    backgroundColor: [
                        'rgba(244, 67, 54, 10)',
                        'rgba(244, 67, 54, 10)',
                        'rgba(244, 67, 54, 12)',
                        'rgba(244, 67, 54, 10)',
                        'rgba(244, 67, 54, 10)',
                        'rgba(244, 67, 54, 10)',
                        'rgba(244, 67, 54, 10)',
                        'rgba(244, 67, 54, 12)',
                        'rgba(244, 67, 54, 10)',
                        'rgba(244, 67, 54, 10)',
                        'rgba(244, 67, 54, 10)',
                        'rgba(244, 67, 54, 10)'
                    ],
                    borderColor: [
                        'rgba(255, 99, 132, 0.2)',
                        'rgba(54, 162, 235, 0.2)',
                        'rgba(255, 206, 86, 0.2)',
                        'rgba(255, 99, 132, 0.2)',
                        'rgba(54, 162, 235, 0.2)',
                        'rgba(255, 206, 86, 0.2)',
                        'rgba(255, 99, 132, 0.2)',
                        'rgba(54, 162, 235, 0.2)',
                        'rgba(255, 206, 86, 0.2)',
                        'rgba(255, 99, 132, 0.2)',
                        'rgba(54, 162, 235, 0.2)',
                        'rgba(255, 206, 86, 0.2)'
                    ],
                    borderWidth:1
                }, {
                    label: 'Appointment',
                    data: appch,
                    backgroundColor: [
                        'rgba(194, 24, 91, 10)',
                        'rgba(194, 24, 91, 10)',
                        'rgba(194, 24, 91, 10)',
                        'rgba(194, 24, 91, 10)',
                        'rgba(194, 24, 91, 10)',
                        'rgba(194, 24, 91, 10)',
                        'rgba(194, 24, 91, 10)',
                        'rgba(194, 24, 91, 10)',
                        'rgba(194, 24, 91, 10)',
                        'rgba(194, 24, 91, 10)',
                        'rgba(194, 24, 91, 10)',
                        'rgba(194, 24, 91, 10)'
            ],
            borderColor: [
                'rgba(255, 99, 132, 0.2)',
                'rgba(54, 162, 235, 0.2)',
                'rgba(255, 206, 86, 0.2)',
                'rgba(255, 99, 132, 0.2)',
                'rgba(54, 162, 235, 0.2)',
                'rgba(255, 206, 86, 0.2)',
