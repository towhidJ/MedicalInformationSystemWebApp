@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Document</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Scripts/bootstrap.min.js"></script>
    <link href="~/Content/CustomCss/AppointmentCSS.css" rel="stylesheet" />
</head>
<body>
    <div class="container-fluid m-5 px-5">
        <a href="#" class="navbar-brand">Jo<span style="color: #00E8E8">ya</span>M:<span style="color: #00E8E8">)H</span></a>
        <h1 align="center" class="f site-title">Joya Memorial Medical Collage & Hospital</h1>
        <h5 align="center" class="f" style="background: lightyellow;color:indigo">Moijjartak circle,Karnafully,Chattogram</h5>
        <hr />
        <h6 align="center" class=" bg-secondary" style="color: white;">Bill RECEIPT</h6>
        <div>

            <aside class=" float-left">
                <table>
                    <tr>
                        <th>Bill No.: &nbsp; </th>
                        <td>@ViewBag.BillNo</td>
                    </tr>
                    <tr>
                        <th>Name: &nbsp; </th>
                        <td>@ViewBag.Name</td>
                    </tr>
                    <tr>
                        <th>Doctor Name: &nbsp; </th>
                        <td>@ViewBag.Doctor</td>
                    </tr>
                </table>
            </aside>


            <aside class=" float-right">
                <table>
                    <tr>
                        <th>Date:</th>
                        <td>@DateTime.Now.ToString("yyyy MMMM dd")</td>
                    </tr>
                    <tr>
                        <th>Age:</th>
                        <td>@ViewBag.Age</td>
                    </tr>
                </table>
            </aside>
        </div>


    </div>
    <br />

    <div class=" container-fluid mx-5 px-5 text-center">
        <hr />
        <div class="  pt-2 site-appoint">
            <p><b><u>Bill</u></b></p>
            <p class=" d-inline-block"><b>Test Fee:&nbsp; </b></p>
            <b><span class=" d-inline-block"> @ViewBag.TestFee</span></b><br />
            <p class=" d-inline-block"><b>Medical Bill:&nbsp; </b></p>
            <b><span class=" d-inline-block"> @ViewBag.MedicalFee</span></b><br />
            <p class=" d-inline-block"><b>Doctor Fee:&nbsp;</b></p>
            <b><span class=" d-inline-block"> @ViewBag.DoctorFee</span></b><hr />
            <hr/>
            <p class=" d-inline-block"><b>Total Bill:&nbsp;</b></p>
            <b><span class=" d-inline-block"> @ViewBag.TotalAmmount</span></b><hr />
        </div>

        <h4><u>Payment Details</u></h4>
        <br>
        <h6 class=" d-inline-block"></h6>
        <span class=" d-inline-block">Paid</span>
        <br>
        <br>

        <div class=" float-right">
            <u>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</u>
            <p>Money Collector</p>
        </div>
        <br>
        <br>
        <hr />
    </div>

</body>
</html>