@model IEnumerable<MedicalInformationSystemWebApp.Models.CodeFirstModel.BillTB>

@{
    ViewBag.Title = "ShowBill";
}

<h2>ShowBill</h2>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.PatientTB.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BillNo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DoctorFee)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MedicalFee)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Testfee)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TotalAmmount)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.PatientTB.NameED)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.BillNo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DoctorFee)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MedicalFee)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Testfee)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TotalAmmount)
        </td>
        <td style="width: 100px">
            <div class="btn-group">
                <a class="btn btn-primary" href="@Url.Action("Edit", "Bill", new {id = item.Id})"><i class="far fa-edit"></i></a>
                <a class="btn btn-success" href="@Url.Action("Details", "Bill", new {id = item.Id})"><i class="fas fa-list-ul"></i></a>
                <a class="btn btn-danger" href="@Url.Action("Delete", "Bill", new {id = item.Id})"><i class="fas fa-trash-alt"></i></a>
                <a class="btn btn-dark" href="@Url.Action("Print", "Bill", new {id = item.Id})"><i class="fas fa-print"></i></a>

            </div>
        </td>
    </tr>
}

</table>
