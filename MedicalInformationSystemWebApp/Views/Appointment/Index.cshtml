@model IEnumerable<MedicalInformationSystemWebApp.Models.CodeFirstModel.AppointmentTB>

@{
    ViewBag.Title = "Index";
}

<br />
<br />
<div class="row">
    <div class="col-6">
        <h2 class="text-info">Ward List</h2>
    </div>
    <div class="col-6 text-right">
        <a href="@Url.Action("Create","Appointment")" class="btn btn-info"><i class="fas fa-plus"></i>&nbsp; Appointment</a>
    </div>
</div>
<br />
<table class="table">
    <tr>
        <th>
            @Html.DisplayName("Doctor Name")
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Type)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AppointmentDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AppointmentNumber)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DoctorTB.NameED)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Type)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AppointmentDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AppointmentNumber)
            </td>
            <td style="width: 100px">
                <div class="btn-group">
                    <a class="btn btn-primary" href="@Url.Action("Edit", "Appointment", new {id = item.AppointmentId})"><i class="far fa-edit"></i></a>
                    <a class="btn btn-success" href="@Url.Action("Details", "Appointment", new {id = item.AppointmentId})"><i class="fas fa-list-ul"></i></a>
                    <a class="btn btn-danger" href="@Url.Action("Delete", "Appointment", new {id = item.AppointmentId})"><i class="fas fa-trash-alt"></i></a>
                    <a class="btn btn-dark" href="@Url.Action("Print", "Appointment", new {id = item.AppointmentId})"><i class="fas fa-print"></i></a>

                </div>
            </td>
        </tr>
    }

</table>
